head
  link(href='#{pathToResources}styles.min.css', rel='stylesheet')
  title #{title}
body
  .form
    .info
      h1 #{title}
      if subTitle
        span #{subTitle}
    if iconUrl
      .thumbnail
        img(src='#{iconUrl}')
    form.login-form
    //- TODO: Remember me button.
    //- TODO: Setup ID's for fields.
    //- TODO: Support failure message.
    
      input(type='text', placeholder='Username')
      input(type='password', placeholder='Password')
      button Login

script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/js-cookie/2.1.3/js.cookie.min.js')
script(src='#{pathToResources}scripts.min.js')
